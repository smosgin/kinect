<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013" 
        x:Class="KinectCameraBasics.MainWindow"
        Title="MainWindow" Height="600" Width="800" Closing="WindowClosing" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <k:KinectSensorChooserUI Name="_sensorChooserUI" HorizontalAlignment="Center"  Grid.Row="0" VerticalAlignment="Top"/>
        <Image Grid.Row="1" Name="_image1" Width="640" Height="480" />
    </Grid>
</Window>
